{
	"name": "IngestionPipeline",
	"properties": {
		"activities": [
			{
				"name": "Load data into SQL DB",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "SqlDWSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "tripsFileSource",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "azureSynapseTripTable",
						"type": "DatasetReference",
						"parameters": {
							"SchemaName": {
								"value": "@pipeline().parameters.SchemaName",
								"type": "Expression"
							},
							"SynapseWorkspaceName": {
								"value": "@pipeline().parameters.SynapseWorkspaceName",
								"type": "Expression"
							},
							"SQLDedicatedPoolName": {
								"value": "@pipeline().parameters.SQLDedicatedPoolName",
								"type": "Expression"
							},
							"keyVaultName": {
								"value": "@pipeline().parameters.keyVaultName",
								"type": "Expression"
							},
							"SQLLoginUsername": {
								"value": "@pipeline().parameters.SQLLoginUsername",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Ingest data from NoSQL",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Load data into Cosmos DB",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbSqlApiSource",
						"preferredRegions": []
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mapComplexValuesToString": true
					}
				},
				"inputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "faresFileSink",
						"type": "DatasetReference",
						"parameters": {
							"keyVaultName": {
								"value": "@pipeline().parameters.keyVaultName",
								"type": "Expression"
							},
							"datalakeAccountName": {
								"value": "@pipeline().parameters.datalakeAccountName",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Ingest data into Data Lake",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Load data into SQL DB",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlDWSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "azureSynapseTripTable",
						"type": "DatasetReference",
						"parameters": {
							"SchemaName": "@pipeline().parameters.SchemaName",
							"SynapseWorkspaceName": "@pipeline().parameters.SynapseWorkspaceName",
							"SQLDedicatedPoolName": "@pipeline().parameters.SQLDedicatedPoolName",
							"keyVaultName": "@pipeline().parameters.keyVaultName",
							"SQLLoginUsername": "@pipeline().parameters.SQLLoginUsername"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "tripFileSink",
						"type": "DatasetReference",
						"parameters": {
							"datalakeAccountName": {
								"value": "@pipeline().parameters.datalakeAccountName",
								"type": "Expression"
							},
							"keyVaultName": "@pipeline().parameters.keyVaultName"
						}
					}
				]
			},
			{
				"name": "Load data into Cosmos DB",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "CosmosDbSqlApiSink",
						"writeBehavior": "insert"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['medallion']"
								}
							},
							{
								"source": {
									"path": "$['hack_license']"
								}
							},
							{
								"source": {
									"path": "$['vendor_id']"
								}
							},
							{
								"source": {
									"path": "$['pickup_datetime']"
								}
							},
							{
								"source": {
									"path": "$['payment_type']"
								}
							},
							{
								"source": {
									"path": "$['fare_amount']"
								}
							},
							{
								"source": {
									"path": "$['surcharge']"
								}
							},
							{
								"source": {
									"path": "$['mta_tax']"
								}
							},
							{
								"source": {
									"path": "$['tip_amount']"
								}
							},
							{
								"source": {
									"path": "$['tolls_amount']"
								}
							},
							{
								"source": {
									"path": "$['total_amount']"
								}
							}
						],
						"collectionReference": ""
					}
				},
				"inputs": [
					{
						"referenceName": "faresFileSource",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"SchemaName": {
				"type": "string",
				"defaultValue": "tripFares"
			},
			"SynapseWorkspaceName": {
				"type": "string",
				"defaultValue": "demomukdgps4msibmpocws1.database.windows.net"
			},
			"SQLDedicatedPoolName": {
				"type": "string",
				"defaultValue": "demomukdgps4msibmpocws1p1 "
			},
			"SQLLoginUsername": {
				"type": "string",
				"defaultValue": "sqladminuser"
			},
			"KeyVaultName": {
				"type": "string",
				"defaultValue": "kvdemomukdgps4msibmpoc"
			},
			"datalakeAccountName": {
				"type": "string",
				"defaultValue": "demomukdgps4msibmpoc"
			}
		},
		"folder": {
			"name": "TripFaresDataPipeline"
		},
		"annotations": []
	}
}